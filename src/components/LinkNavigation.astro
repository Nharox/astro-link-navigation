---
import type { HTMLAttributes } from 'astro/types';
import type { LinkKey } from '../models/link-key';

import { links } from '../data/links';
import Icon from './Icon.astro';

interface Props extends HTMLAttributes<'nav'> {
  maxWidth: string;
  paddingInline: string;
  backgroundColor: string;
  foregroundColor: string;
  hoverColor: string;
  activeLink: LinkKey;
  hideIcons?: boolean;
}

const {
  maxWidth,
  paddingInline,
  backgroundColor,
  foregroundColor,
  hoverColor,
  activeLink,
  hideIcons,
  ...props
} = Astro.props;
---

<div class="container">
  <nav {...props}>
    <ul>
      {
        links.map((link) => {
          const isActive = link.key === activeLink;

          return (
            <li>
              <a
                href={link.href}
                aria-current={isActive ? 'page' : undefined}
                class:list={[
                  !hideIcons && 'icon-link',
                  isActive && 'active-link',
                ]}
              >
                {!hideIcons && <Icon name={link.iconName} />}
                {link.name}
              </a>
            </li>
          );
        })
      }
    </ul>
  </nav>
</div>

<style
  define:vars={{
    'max-width': maxWidth,
    'padding-inline': paddingInline,
    'background-color': backgroundColor,
    'foreground-color': foregroundColor,
    'hover-color': hoverColor,
  }}
>
  .container {
    overflow-x: auto;
    font-size: 16px;
    color: var(--foreground-color);
    background-color: var(--background-color);

    @media (width >= 1024px) {
      font-size: 18px;
    }
  }

  .icon-link {
    display: inline-flex;
    column-gap: 0.5em;
    align-items: center;
  }

  .active-link {
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 4px;
  }

  nav {
    max-width: calc(var(--max-width) + var(--padding-inline) * 2);
    margin-inline: auto;
  }

  ul {
    display: flex;
    column-gap: 1.5em;
    padding: 0;
    list-style-type: none;

    @media (width >= 768px) {
      column-gap: 2em;
    }
  }

  li {
    &:first-child {
      padding-left: var(--padding-inline);
    }

    &:nth-last-child(2) {
      margin-left: auto;
    }

    &:last-child {
      padding-right: var(--padding-inline);
    }
  }

  a {
    display: inline-block;
    padding-block: 1em;
    color: currentcolor;
    text-decoration: none;
    text-wrap: nowrap;

    &:hover {
      color: var(--hover-color);
    }

    svg {
      flex: none;
      width: 1.2em;
      height: 1.2em;
    }
  }
</style>
